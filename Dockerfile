FROM node:18-slim

# 1. Install Library Pendukung untuk Chromium (Wajib di Linux)
RUN apt-get update && apt-get install -y \
    ca-certificates \
    fonts-liberation \
    libasound2 \
    libatk-bridge2.0-0 \
    libatk1.0-0 \
    libc6 \
    libcairo2 \
    libcups2 \
    libdbus-1-3 \
    libexpat1 \
    libfontconfig1 \
    libgbm1 \
    libgcc1 \
    libglib2.0-0 \
    libgtk-3-0 \
    libnspr4 \
    libnss3 \
    libpango-1.0-0 \
    libpangocairo-1.0-0 \
    libstdc++6 \
    libx11-6 \
    libx11-xcb1 \
    libxcb1 \
    libxcomposite1 \
    libxcursor1 \
    libxdamage1 \
    libxext6 \
    libxfixes3 \
    libxi6 \
    libxrandr2 \
    libxrender1 \
    libxss1 \
    libxtst6 \
    lsb-release \
    wget \
    xdg-utils \
    --no-install-recommends \
    && rm -rf /var/lib/apt/lists/*

# 2. JANGAN Skip Download (Biarkan Puppeteer download Chromium yang cocok)
# Hapus ENV PUPPETEER_SKIP_CHROMIUM_DOWNLOAD
# Hapus ENV PUPPETEER_EXECUTABLE_PATH

WORKDIR /usr/src/app

# 3. Install Dependencies (Proses ini akan download Chromium ~150MB)
COPY package*.json ./
RUN npm install

COPY . .

CMD [ "node", "dabewa.js" ]
